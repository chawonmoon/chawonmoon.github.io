.post-content
    padding rem(40px) 0
    img
        max-width 100%
        margin rem(30px) auto
        display block
    p, h1, h2, h3, h4, h5, h6, ul,ol, .tags, iframe
        center(rem(800px))
        padding 0 rem(20px)
        margin 0 auto rem(30px)
        mainFont(300)
        font-size rem(18px)
        line-height 2
        letter-spacing 0.01rem
        +above(cut)
            font-size rem(20px)
    p,li
        color texts
        margin rem(10px) auto
        line-height 1.4
        code
            font-size rem(14px)
            font-weight bold
            padding rem(2px) rem(5px)
            color colorcode
            background #eee
            border-radius rem(3px)
    a
        mainFont(300)
        color main
        text-decoration none
        border-bottom 2px solid main
    iframe
        margin-top rem(30px)
        width 100%
    #twitter-widget-0
    	margin auto !important
    h1,h2,h3,h4,h5
        mainFont(800)
    h1
        font-size rem(30px)
        line-height 1.4
        +above(cut)
            font-size rem(45px)
    h2
        margin rem(30px) auto rem(15px)
        font-size rem(22px)
        line-height 1.4
        +above(cut)
            font-size rem(35px)
    h3
        font-size rem(21px)
        line-height 1.4
        margin 0 auto rem(10px)
        +above(cut)
            font-size rem(25px)
    h4, h5, h6
        margin 0 auto
    ul,ol
        margin 0 auto
        padding-left rem(40px)
    ul.post-list
        padding 0
        +below(cut)
            padding 0 rem(20px)
    blockquote
        width calc('100% - 40px')
        max-width rem(760px)
        position relative
        border-left rem(5px) solid main
        padding 0 rem(20px) 0 rem(30px)
        margin rem(20px) auto
        p
            color rgba(0,0,0,0.6)
            margin 0
            padding 0
            +below(cut)
                font-size rem(18px)
                line-height 1.5
                padding 0
        &:after
            content '!'
            font-size rem(18px)
            font-weight bold
            line-height 1
            position absolute
            background main
            padding rem(3px) rem(10px) rem(7px) rem(6px)
            color #fff
            left 0
            top 0
        blockquote
            margin-bottom 0
    hr
    	center(rem(760px))
    	border 1px solid lightGray
    	margin 20px auto

.share
    center(800px)
    text-align center
    border-top 1px solid lightGray
    padding-top rem(20px)
    svg
        margin rem(15px)
        size(35,35)
    a
        text-decoration none
        &:hover svg
            fill main

table
    width calc('100% - 40px')
    max-width rem(760px)
    margin:0 auto
    +below(cut)
        width calc('100% - 40px')
    th, td
        border rem(2px) solid #ccc
        padding rem(5px)

.tag-title
    mainFont(300)
    font-size rem(36px)
    margin-top rem(60px)
    center(rem(800px))
    +below(cut)
        font-size rem(28px)
        margin-top rem(20px)
        padding 0 rem(20px)

.post-list
    list-style none
    margin rem(25px) auto
    +below(cut)
        padding 0 rem(20px)
    a
        display block
        border-bottom 1px solid darken(lightGray,10%)
        padding rem(10px) 0
        text-decoration none
        transition all .5s
        &:hover
            color hover
            border-bottom 1px solid hover
    .entry-date
        float right
        +below(cut)
            display none
